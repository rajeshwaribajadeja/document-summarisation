# Example .env for Document Summarisation App
# Replace values as needed. Save as .env in project root to load automatically.

# Google/Gemini API key (used by langchain-google-genai connector)
GOOGLE_API_KEY=

# Default summary mode: prose | bullet | extractive
DEFAULT_MODE=prose

# Default chain type: stuff | map_reduce | refine
DEFAULT_CHAIN_TYPE=stuff

# Default LLM model name (for Google Gemini or other connector)
DEFAULT_LLM_MODEL=gemini-2.5-flash

# Default temperature for the model (0.0 - 1.0). Stored as string.
DEFAULT_TEMPERATURE=0

# Upload file prefix (loader will save incoming uploads as <UPLOAD_FILENAME>.<ext>)
UPLOAD_FILENAME=upload
